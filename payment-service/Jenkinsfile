pipeline {
    agent any

    environment {
        IMAGE_NAME = 'your-dockerhub-username/payment-service'
        DOCKERHUB_CREDENTIALS = 'dockerhub-creds' // Имя Jenkins credentials для DockerHub
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm // Забирает код из Git (предполагается GitHub)
            }
        }

        stage('Build with Maven') {
            steps {
                sh './mvnw clean package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKERHUB_CREDENTIALS}") {
                        docker.image("${IMAGE_NAME}").push("latest")
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ CI/CD pipeline completed successfully!'
        }
        failure {
            echo '❌ Build failed. Check logs.'
        }
    }
}
